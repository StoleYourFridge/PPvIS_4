<DisabledButton@Button>:
    disabled: True
    color: (50, 50, 255, 1)
    background_color: (50, 100, 30, 1)


<DenominationInputComponent>:
    orientation: 'vertical'
    TextInput:
        id: first_input
        text: ""
    TextInput:
        id: second_input
        text: ""
    TextInput:
        id: third_input
        text: ""
    TextInput:
        id: forth_input
        text: ""
    TextInput:
        id: fifth_input
        text: ""
    TextInput:
        id: sixth_input
        text: ""
    TextInput:
        id: seventh_input
        text: ""
    TextInput:
        id: eighth_input
        text: ""


<StartScreen>:
    name: "StartScreen"
    BoxLayout:
        orientation: 'vertical'
        Button:
            text: "AddNewUser"
            size_hint: .7, 1
            pos_hint: {"center_x": 0.5}
            on_press: root.on_add_new_user_press()
        Button:
            text: "WorkWithExistingUsers"
            size_hint: .7, 1
            pos_hint: {"center_x": 0.5}
            on_press: root.on_work_with_existing_users_press()


<AddNewUserScreen>:
    name: "AddNewUserScreen"
    BoxLayout:
        orientation: 'vertical'
        GridLayout:
            cols: 2
            size_hint: 1, .5
            DisabledButton:
                text: "Name"
            TextInput:
                id: name_input
                text: ""
            DisabledButton:
                text: "Bank Bill"
            TextInput:
                id: bank_bill_input
                text: ""
            DisabledButton:
                text: "User Phone Bill"
            TextInput:
                id: user_phone_bill_input
                text: ""
            DisabledButton:
                text: "Card Password"
            TextInput:
                id: card_password_input
                text: ""
        GridLayout:
            cols: 3
            DisabledButton:
                size_hint: 1, .2
                text: "Denominations"
            DisabledButton:
                size_hint: 1, .2
                text: "User Storage"
            DisabledButton:
                size_hint: 1, .2
                text: "Bank Storage"
            BoxLayout:
                orientation: 'vertical'
                DisabledButton:
                    text: root.banknotes_denominations[0]
                DisabledButton:
                    text: root.banknotes_denominations[1]
                DisabledButton:
                    text: root.banknotes_denominations[2]
                DisabledButton:
                    text: root.banknotes_denominations[3]
                DisabledButton:
                    text: root.banknotes_denominations[4]
                DisabledButton:
                    text: root.banknotes_denominations[5]
                DisabledButton:
                    text: root.banknotes_denominations[6]
                DisabledButton:
                    text: root.banknotes_denominations[7]
            DenominationInputComponent:
                id: user_storage_input
            DenominationInputComponent:
                id: bank_storage_input
        BoxLayout:
            size_hint: 1, .2
            orientation: 'horizontal'
            Button:
                text: "Back"
                on_press: root.on_back_press()
            DisabledButton:
                text: "DialogWindow"
                id: dialog_window
            Button:
                text: "Apply Information"
                on_press: root.on_apply_information_press()


<PasswordCheckerScreen>:
    name: "PasswordCheckerScreen"
    BoxLayout:
        orientation: 'vertical'
        size_hint: 1, .5
        pos_hint: {"center_y": 0.5}
        DisabledButton:
            text: ""
            size_hint: .5, 1
            pos_hint: {"center_x": 0.5}
            id: attempts_amount
        TextInput:
            text: ""
            font_size: 40
            size_hint: .5, 1
            pos_hint: {"center_x": 0.5}
            password: True
            id: password_input
        DisabledButton:
            text: ""
            size_hint: .5, 1
            pos_hint: {"center_x": 0.5}
            id: dialog_window
        BoxLayout:
            orientation: 'horizontal'
            Button:
                text: "Back"
                id: back_button
                on_press: root.on_back_press()
            Button:
                text: "Bank Call"
                id: bank_call_button
                on_press: root.on_bank_call_press()
            Button:
                text: "Apply Password"
                id: apply_button
                on_press: root.on_apply_password_press()


